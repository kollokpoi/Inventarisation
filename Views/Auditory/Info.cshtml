@using Inventarisation.Models
@{
    Layout = "_Layout";
}
@model Auditory

<div class="auditory-item_row">
    <p class="auditory-item_text">Название:<span class="auditory-item_span">@Model.Name</span></p>
    <p class="auditory-item_text">Короткое название:<span class="auditory-item_span">@Model.ShortName</span></p>
</div>
<p class="auditory-item_text">Ответственный пользователь:<span class="auditory-item_span">@Model.ResponsibleUser.GetFullName()</span></p>
@if (Model.TempResponsibleUser != null)
{
    <p class="auditory-item_text">Временно-ответственный пользователь:<span class="auditory-item_span">@Model.TempResponsibleUser.GetFullName()</span></p>
}
else
{
   <p class="auditory-item_text">Временно-ответственный пользователь:<span class="auditory-item_span">Отсутствует</span></p>
}

<p class="auditory-item_text">Оборудование в аудитории:</p>
@{
    foreach (var item in Model.Equipment)
    {
         <a href="~/Equipment/Info?id=@item.InventNumber" class="equipment-item_parrent">
            @if (item.Image!=null)
            {
                <img class="equipment-item_image" src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" />
            }
            else
            {
                <img class="equipment-item_image" src="/Img/fotoapparat.jpg" />
            }
            <div class="equipment-item_info-block">
                <p class="equipment-item_text">Название:<span class="equipment-item_span">@item.Name</span> </p>
                <p class="equipment-item_text">Цена: <span class="equipment-item_span">@item.Price</span></p>
                <p class="equipment-item_text">Комментарий: <span class="equipment-item_span">@item.Comment</span></p>
            </div>
        </a>
    }
}
